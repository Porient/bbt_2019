<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbt.back.dao.CollectionDao">
    <resultMap id="collectionMap" type="com.bbt.back.entities.Collection">
        <id column="collection_id" property="collectionId" />
        <result column="user_id" property="userId" />
        <result column="product_id" property="productId" />
    </resultMap>

    <delete id="deleteCollection" parameterType="java.lang.Integer">
      delete from `collection`
      where collection_id = #{collectionId}
    </delete>

    <insert id="insertCollection" parameterType="com.bbt.back.entities.Collection">
    insert into `collection` (user_id, product_id)
    values (#{userId}, #{productId})
  </insert>

    <update id="updateCollection" parameterType="com.bbt.back.entities.Collection">
        update `collection`
        <set>
            <if test="userId != null and userId != ''"> user_id = #{userId},</if>
            <if test="productId != null and productId != ''"> product_id = #{productId}</if>
        </set>
        where collection_id = #{collectionId}
    </update>

    <select id="findCollectionById" parameterType="java.lang.Integer" resultMap="collectionMap">
      select c.*
      from `collection` c
      where c.collection_id = #{collectionId}
    </select>

    <select id="selectAll" parameterType="java.lang.Integer" resultMap="collectionMap">
      select c.*
      from `collection` c
    </select>


</mapper>