<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbt.back.dao.AdminDao">
    <resultMap id="adminMap" type="com.bbt.back.entities.Admin">
        <id column="admin_id" property="adminId" />
        <result column="admin_email" property="adminEmail" />
        <result column="password" property="password" />
    </resultMap>

    <delete id="deleteAdmin" parameterType="java.lang.Integer">
      delete from `admin`
      where admin_id = #{adminId}
    </delete>

    <insert id="insertAdmin" parameterType="com.bbt.back.entities.Admin">
      insert into `admin` (admin_email, `password`)
      values (#{adminEmail}, #{password})
    </insert>

    <update id="updateAdmin" parameterType="com.bbt.back.entities.Admin">
        update `admin`
        <set>
            <if test="adminEmail != null and adminEmail != ''"> admin_email = #{adminEmail},</if>
            <if test="password != null and password != ''"> `password` = #{password}</if>
        </set>
        where admin_id = #{adminId}
    </update>

    <select id="findAdminById" parameterType="java.lang.Integer" resultMap="adminMap">
      select a.*
      from `admin` a
      where a.admin_id = #{adminId}
    </select>

    <select id="findByAdminEmail" resultMap="adminMap">
      select a.*
      from `admin` a
      where a.admin_email=#{adminEmail}
    </select>

    <select id="findByAdminEmailAndPassword" resultMap="adminMap">
      select a.*
      from `admin`
      where a.admin_email=#{adminEmail}
      and a.password=#{password}
    </select>
</mapper>