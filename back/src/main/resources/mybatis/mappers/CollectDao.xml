<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbt.back.dao.CollectDao">
    <resultMap id="collectMap" type="com.bbt.back.entities.Collect">
        <id column="collect_id" property="collectId" />
        <result column="user_id" property="userId" />
        <result column="product_id" property="productId" />
        <result column="product_type" property="productType" />
    </resultMap>

    <delete id="deleteCollect" parameterType="java.lang.Integer">
      delete from `collect`
      where collect_id = #{collectId}
    </delete>

    <insert id="insertCollect" parameterType="com.bbt.back.entities.Collect">
      insert into `collect` (user_id, product_id, product_type)
      values (#{userId}, #{productId}, #{productType})
    </insert>

    <update id="updateCollect" parameterType="com.bbt.back.entities.Collect">
        update `collect`
        <set>
            <if test="userId != null and userId != ''"> user_id = #{userId},</if>
            <if test="productId != null and productId != ''"> product_id = #{productId},</if>
            <if test="productType != null and productType != ''"> product_type = #{productType}</if>
        </set>
        where collect_id = #{collectId}
    </update>

    <select id="findCollectById" parameterType="java.lang.Integer" resultMap="collectMap">
      select c.*
      from `collect` c
      where c.collect_id = #{collectId}
    </select>

    <select id="selectAll" resultMap="collectMap">
      select c.*
      from `collect` c
    </select>

    <select id="selectByUserId" parameterType="java.lang.Integer" resultMap="collectMap">
      select c.*
      from `collect` c
      where c.user_id = #{userId}
    </select>

    <select id="countByUserId" parameterType="java.lang.Integer">
      select count(1)
      from `collect` c
      where c.user_id = #{userId}
    </select>

    <select id="sumByUserIdList" resultType="java.util.HashMap">
        SELECT user_id as 'key', count(1) as 'value'
        FROM comment
        GROUP BY user_id;
    </select>
</mapper>