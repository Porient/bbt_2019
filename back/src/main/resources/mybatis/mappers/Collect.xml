<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbt.back.dao.CollectDao">
    <resultMap id="collectMap" type="com.bbt.back.entities.Collect">
        <id column="collect_id" property="collectId" />
        <result column="user_id" property="userId" />
        <result column="product_id" property="productId" />
    </resultMap>

    <delete id="deleteCollect" parameterType="java.lang.Integer">
      delete from `collect`
      where collect_id = #{collectId}
    </delete>

    <insert id="insertCollect" parameterType="com.bbt.back.entities.Collect">
      insert into `collect` (user_id, product_id)
      values (#{userId}, #{productId})
    </insert>

    <update id="updateCollect" parameterType="com.bbt.back.entities.Collect">
        update `collect`
        <set>
            <if test="userId != null and userId != ''"> user_id = #{userId},</if>
            <if test="productId != null and productId != ''"> product_id = #{productId}</if>
        </set>
        where collect_id = #{collectId}
    </update>

    <select id="findCollectById" parameterType="java.lang.Integer" resultMap="collectMap">
      select c.*
      from `collect` c
      where c.collect_id = #{collectId}
    </select>

    <select id="selectAll" parameterType="java.lang.Integer" resultMap="collectMap">
      select c.*
      from `collect` c
    </select>
</mapper>