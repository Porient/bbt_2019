<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbt.back.dao.AttitudeDao">
    <resultMap id="attitudeMap" type="com.bbt.back.entities.Attitude">
        <id column="attitude_id" property="attitudeId" />
        <result column="user_id" property="userId" />
        <result column="product_id" property="productId" />
        <result column="attitude" property="attitude" />
    </resultMap>

    <delete id="deleteAttitude" parameterType="java.lang.Integer">
      delete from `attitude`
      where attitude_id = #{attitudeId}
    </delete>

    <insert id="insertAttitude" parameterType="com.bbt.back.entities.Attitude">
      insert into `attitude` (user_id, product_id, phone, attitude)
      values (#{userId}, #{productId}, #{attitude})
    </insert>

    <update id="updateAttitude" parameterType="com.bbt.back.entities.Attitude">
        update `attitude`
        <set>
            <if test="userId != null and userId != ''"> user_id = #{userId},</if>
            <if test="productId != null and productId != ''"> product_id = #{productId},</if>
            <if test="attitude != null and attitude != ''"> attitude = #{attitude}</if>
        </set>
        where attitude_id = #{attitudeId}
    </update>

    <select id="findAttitudeById" parameterType="java.lang.Integer" resultMap="attitudeMap">
      select a.*
      from `attitude` a
      where a.attitude_id = #{attitudeId}
    </select>

    <select id="selectAll" parameterType="java.lang.Integer" resultMap="attitudeMap">
      select a.*
      from `attitude` a
    </select>
</mapper>