<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbt.back.dao.CrawlerDao">
    <resultMap id="crawlerMap" type="com.bbt.back.entities.Crawler">
        <id column="parameter_id" property="parameterId" />
        <result column="crawl_address" property="crawlAddress" />
        <result column="time_interval" property="timeInterval" />
        <result column="script_name" property="scriptName" />
        <result column="remarks" property="remarks" />
    </resultMap>

    <delete id="deleteCrawler" parameterType="java.lang.Integer">
      delete from `crawler`
      where parameter_id = #{parameterId}
    </delete>

    <insert id="insertCrawler" parameterType="com.bbt.back.entities.Crawler">
      insert into `crawler` (crawl_address, time_interval, script_name, remarks)
      values (#{crawlAddress}, #{timeInterval}, #{scriptName}, #{remarks})
    </insert>

    <update id="updateCrawler" parameterType="com.bbt.back.entities.Crawler">
        update `crawler`
        <set>
            <if test="crawlAddress != null and crawlAddress != ''"> crawl_address = #{crawlAddress},</if>
            <if test="timeInterval != null and timeInterval != ''"> time_interval = #{timeInterval},</if>
            <if test="scriptName != null and scriptName != ''"> script_name = #{scriptName},</if>
            <if test="remarks != null and remarks != ''"> remarks = #{remarks}</if>
        </set>
        where parameter_id = #{parameterId}
    </update>

    <select id="findCrawlerById" parameterType="java.lang.Integer" resultMap="crawlerMap">
      select c.*
      from `crawler` c
      where c.parameter_id = #{parameterId}
    </select>

    <select id="selectAll" parameterType="java.lang.Integer" resultMap="crawlerMap">
      select c.*
      from `crawler` c
    </select>

</mapper>